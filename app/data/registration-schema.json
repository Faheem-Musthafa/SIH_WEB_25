{
  "title": "Smart India Hackathon - Internals (MCAS) Registration",
  "description": "Register for SIH Internals (MCAS). ",
  "sections": [
    {
      "id": "personal",
      "title": "Personal Details",
      "description": "Tell us about yourself.",
      "fields": [
        {
          "key": "name",
          "label": "Full Name",
          "type": "text",
          "required": true,
          "placeholder": "Enter your full name"
        },
        {
          "key": "gender",
          "label": "Gender",
          "type": "select",
          "required": true,
          "options": [
            "male",
            "female",
            "non-binary"
          ]
        },
        {
          "key": "phone",
          "label": "Phone Number",
          "type": "text",
          "required": true,
          "placeholder": "e.g., +91 98765 43210"
        }
      ]
    },
    {
      "id": "academic",
      "title": "Academic Details",
      "description": "Your study information.",
      "fields": [
        {
          "key": "department",
          "label": "Department/Batch",
          "type": "select",
          "required": true,
          "options": [
            "BSc Electronics",
            "BCA",
            "BCom CA",
            "Bcom TT",
            "Psychology",
            "BBA",
            "BA Economics"
          ]
        },
        {
          "key": "year",
          "label": "Year of Study",
          "type": "select",
          "required": true,
          "options": [
            "1",
            "2",
            "3",
            "4"
          ]
        }
      ]
    },
    {
      "id": "problem-statement",
      "title": "Problem Statement Selection",
      "description": "Choose your preferred problem statement for the hackathon.",
      "fields": [
        {
          "key": "problemStatement",
          "label": "Problem Statement",
          "type": "problem-selector",
          "required": true,
          "placeholder": "Select a problem statement that interests you"
        }
      ]
    }
  ]
}